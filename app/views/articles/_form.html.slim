= javascript_include_tag Ckeditor.cdn_url
= simple_form_for article do |f|
  .form-group
    = f.input :title, label: 'Title',
              placeholder: :title,
              input_html: { class: 'form-control mb-2' },
              required: true,
              error: 'Can\'t be blank!'
    br
    .form-group
      = f.input :short_description, label: 'Short Description',
                placeholder: :short_description,
                input_html: { class: 'form-control mb-2' },
                error: 'Can\'t be blank!'
    br
    .form-group
      = f.input :image, label: 'Image preview',
                placeholder: :image,
                input_html: { class: 'form-control-file  mb-2' }
    br
    .form-check.form-check-inline
      = f.input :is_private, as: :boolean, label: 'Private', input_html: { class: 'form-check-input', checked: 'checked' }
    hr
    .form-group
      = f.input :long_description, as: :ckeditor, label: 'Body',
                placeholder: :long_description,
                input_html: { class: 'form-control' },
                error: 'Can\'t be blank!'
    br
    .form-group
      = f.button :submit, class: 'btn-primary', value: 'Confirm'
      .float-right
        = link_to  'Cancel', articles_path, class: 'btn btn-outline-danger'
